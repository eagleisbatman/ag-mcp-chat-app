{
  "expo": {
    "name": "FarmerChat",
    "slug": "farmerchat",
    "version": "2.0.0",
    "sdkVersion": "54.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF",
      "dark": {
        "image": "./assets/splash-icon.png",
        "backgroundColor": "#000000"
      }
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "org.digitalgreen.agmcp",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to provide regional farming advice, weather forecasts, and crop recommendations specific to your area."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF",
        "monochromeImage": "./assets/adaptive-icon.png"
      },
      "splash": {
        "image": "./assets/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#FFFFFF",
        "dark": {
          "image": "./assets/splash-icon.png",
          "backgroundColor": "#000000"
        }
      },
      "softwareKeyboardLayoutMode": "resize",
      "package": "org.digitalgreen.agmcp",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow FarmerChat to use your location for regional farming advice."
        }
      ],
      "expo-font",
      "expo-splash-screen",
      "react-native-edge-to-edge"
    ],
    "extra": {
      "eas": {
        "projectId": "f5d06645-f6a9-4679-8828-794db537e8c9"
      }
    },
    "owner": "eagleisbatman"
  }
}
