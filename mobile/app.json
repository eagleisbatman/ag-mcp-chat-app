{
  "expo": {
    "name": "AG-MCP Farm Assistant",
    "slug": "ag-mcp-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#4CAF50"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "org.digitalgreen.agmcp",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to provide regional farming advice, weather forecasts, and crop recommendations specific to your area."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4CAF50"
      },
      "package": "org.digitalgreen.agmcp",
      "permissions": ["ACCESS_FINE_LOCATION", "ACCESS_COARSE_LOCATION"]
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow AG-MCP to use your location for regional farming advice."
        }
      ]
    ]
  }
}

